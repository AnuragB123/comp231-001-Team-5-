                document.getElementById("letterGrade2").value = letter;
            }

            //Subject 3
            if (subject3Grade >= 90) {
                letter = 'A';
                document.getElementById("letterGrade3").value = letter;
            } else if (subject3Grade >= 80) {
                letter = 'B';
                document.getElementById("letterGrade3").value = letter;
            } else if (subject3Grade >= 70) {
                letter = 'C';
                document.getElementById("letterGrade3").value = letter;
            } else if (subject3Grade >= 60) {
                letter = 'D';
                document.getElementById("letterGrade3").value = letter;
            } else {
                letter = 'F';
                document.getElementById("letterGrade3").value = letter;
            }

            //Subject 4
            if (subject4Grade >= 90) {
                letter = 'A';
