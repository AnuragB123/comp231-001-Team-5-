    <div class="container">
        <div class="main">
            <h2>Grader</h2>
            <!--Sample Subjects-->
            <!--Grader form-->
            <form>
                Mathematics: <input type="number" id="subject1" name="Mathematics"><br> Grade: <input type="text" readonly id="letterGrade1" name="letterGrader"><br> Sciences: <input type="number" id="subject2" name="Sciences"><br> Grade: <input type="text"
