            } else if (subject3Grade >= 80) {
                letter = 'B';
                document.getElementById("letterGrade5").value = letter;
            } else if (subject3Grade >= 70) {
                letter = 'C';
                document.getElementById("letterGrade5").value = letter;
            } else if (subject3Grade >= 60) {
                letter = 'D';
                document.getElementById("letterGrade5").value = letter;
            } else {
                letter = 'F';
                document.getElementById("letterGrade5") = letter;
            }
        }
    </script>
